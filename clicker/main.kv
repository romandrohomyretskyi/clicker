#:set color_txt_d [0.2, 0.07, 0.04, 1]  # Темно-коричневий
#:set color_btn_bg [0.83, 0.83, 0.96, 1]  # Світло-синій
#:set color_btn_bg_pr [0.97, 0.83, 0.96, 1]  # Світло-рожевий
#:set color_bg [0.82, 0.79, 0.13, 1]  # Жовтий
#:set color_a [0.99, 0.23, 0.06, 1]  # Червоний
#:set color_b [0.23, 0.09, 0.58, 1]  # Пурпурний


<ButtonMenu@Button>:
    size_hint_y: 0.3
    font_size: "30sp"
    color: color_txt_d
    background_color: color_btn_bg
    background_normal: ''
    background_down: ''
    on_press: self.background_color = color_btn_bg_pr
    font_name: 'assets/Workbench-Regular-VariableFont_BLED,SCAN.ttf'

<MenuScreen>:
    background_color: 1, 1, 0, 1
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            text: 'Cosmo Adventure'
            font_name: 'assets/Workbench-Regular-VariableFont_BLED,SCAN.ttf'
            font_size: '30dp'
            color: 'red'
            size_hint_y: 0.2

        Image:
            source: 'assets/1.jpg'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3

        ButtonMenu:
            text: "Start"
            on_press: root.manager.current = 'game'
        ButtonMenu:
            text: "Lider Board"
        ButtonMenu:
            text: "Settings"

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: 'score: ' + str(root.points)
                font_name: 'assets/Workbench-Regular-VariableFont_BLED,SCAN'
                font_size: '30dp'
                color: color_a

        FloatLayout:
            size_hint_y: 0.8
            Animal:
                id: animal

        BoxLayout:
            size_hint_y: 0.1


<Animal>
    allow_stretch: True
    size_hint: None, None
    size: '200dp', '200dp'
    center: self.parent.center
